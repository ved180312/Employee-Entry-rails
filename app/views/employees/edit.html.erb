  </div>

   <div>
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>

   <div>
    <%= f.label :personal_email %><br/>
    <%= f.text_field :personal_email %>
  </div>

   <div>
    <%= f.label :city %><br/>
    <%= f.text_field :city %>
  </div>

   <div>
    <%= f.label :state %><br/>
    <%= f.text_field :state %>
  </div>

   <div>
    <%= f.label :country %><br/>
    <%= f.text_field :country %>
  </div>

   <div>
    <%= f.label :pincode %><br/>
    <%= f.text_field :pincode %>
  </div>

