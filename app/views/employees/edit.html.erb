
<% if @emp.errors.any? %>
  <h2>The following errors prevented the emp from being saved</h2>
  <ul>
    <% @emp.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


